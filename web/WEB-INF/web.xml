<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>/Login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ContentServlet</servlet-name>
        <servlet-class>Servlet.ContentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContentServlet</servlet-name>
        <url-pattern>/content</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FaRouteServlet</servlet-name>
        <servlet-class>Servlet.FaRouteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FaRouteServlet</servlet-name>
        <url-pattern>/favourite</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddRouteServlet</servlet-name>
        <servlet-class>Servlet.AddRouteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddRouteServlet</servlet-name>
        <url-pattern>/addroute</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OwnRInfoServlet</servlet-name>
        <servlet-class>Servlet.OwnRouteInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OwnRInfoServlet</servlet-name>
        <url-pattern>/ownRouteInfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModifyRouteServlet</servlet-name>
        <servlet-class>Servlet.OwnRouteInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModifyRouteServlet</servlet-name>
        <url-pattern>/modifyRoute</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FaRInfoServlet</servlet-name>
        <servlet-class>Servlet.FaRouteInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FaRInfoServlet</servlet-name>
        <url-pattern>/favouriteRouteInfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RouteInfoServlet</servlet-name>
        <servlet-class>Servlet.RouteInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RouteInfoServlet</servlet-name>
        <url-pattern>/routeInfo</url-pattern>
    </servlet-mapping>
</web-app>